{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["NODE_ENV"],
  "tasks": {
    "prisma:generate": {
      "outputs": ["node_modules/.prisma/client/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.stories.{tsx,jsx,mdx}",
        "!Dockerfile",
        "!buildspec.yml",
        "!task-definition.json"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:storybook-config": {
      "cache": true
    },
    "ui-storybook": {
      "dependsOn": ["^build:storybook-config"]
    },
    "apps-storybook": {
      "dependsOn": ["^build:storybook-config"]
    },
    "build:ui-storybook": {},
    "build:apps-storybook": {},
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev:backend": {
      "cache": false,
      "persistent": true
    },
    "dev:frontend": {
      "cache": false,
      "persistent": true
    },
    "dev:frontend:msw": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["@repo/testing-config#build", "^build"],
      "cache": false,
      "persistent": true
    },
    "test:watch": {
      "dependsOn": ["@repo/testing-config#build", "^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
