{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.stories.{tsx,jsx,mdx}",
        "!Dockerfile",
        "!buildspec.yml",
        "!task-definition.json"
      ],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:storybook-config": {
      "cache": true
    },
    "ui-storybook": {
      "dependsOn": ["^build:storybook-config"]
    },
    "apps-storybook": {
      "dependsOn": ["^build:storybook-config"]
    },
    "build:ui-storybook": {},
    "build:apps-storybook": {},
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:msw": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["@repo/testing-config#build", "^build"],
      "cache": false,
      "persistent": true
    },
    "test:watch": {
      "dependsOn": ["@repo/testing-config#build", "^build"],
      "cache": false,
      "persistent": true
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
